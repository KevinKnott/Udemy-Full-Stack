<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="POST">
  <div class="form-group">
    <label>Title</label>
    <input
      type="text"
      name="postTitle"
      id=""
      placeholder="Title"
      style="display: block;"
      class="form-control"
    />
  </div>

  <div class="form-group">
    <label>Post</label>
    <textarea rows="4" cols="500" name="postBody" class="form-control">
    </textarea>
  </div>

  <button class="btn btn-primary" type="submit">Publish</button>
</form>
<%- include("partials/footer") -%>
